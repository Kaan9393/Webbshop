@page
@model Kladbutiken.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<body>
    <div id="login">
        <h3 class="text-center text-white pt-5"></h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" method="post" target="_self">
                            <h3 class="text-center text-info">Logga in</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">E-mail:</label><br>
                                <input type="text" name="username" id="username" class="form-control" asp-for="UserLoginModel.UserName">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Lösenord:</label><br>
                                <input type="password" name="password" id="password" class="form-control" asp-for="UserLoginModel.Password">
                            </div>
                            <div class="form-group">
                                <label for="remember-me" class="text-info"><span>Kom ihåg mig</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Logga in">
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="register" class="text-info">Inte medlem? Tryck här!</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
