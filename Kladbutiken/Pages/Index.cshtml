@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h2 class="my-4">Category</h2>
            @foreach (var category in Model.AllCategories)
            {
                <div class="list-group">
                    <a href="?SelectedCategory=@category.TypeName" class="list-group-item">@category.TypeName</a>
                    @*<a href="#" class="list-group-item">T-Shirt</a>
                    <a href="#" class="list-group-item">Byxor</a>*@
                </div>
            }


        </div>
        @if (Model.SelectedCategory == null)
        {
            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row">



                    @foreach (var product in Model.AllProducts)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="/ProductView?SelectedProduct=@product.ID"><img class="card-img-top" src="@product.URLImg" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/ProductView?SelectedProduct=@product.ID">@product.ProductName</a>
                                    </h4>
                                    <h5>
                                        @if (product.PriceWithDiscount != product.Price)
                                        {
                                            <span><s>@product.Price</s> :-</span>

                                            <span class="text-danger">@Math.Round(product.PriceWithDiscount, 0) :-</span>
                                        }
                                        else
                                        {
                                            <span>@product.Price :-</span>
                                        }
                                    </h5>
                                    <p class="card-text">@product.Description</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@product.Category.TypeName</small>
                                    @* <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>*@
                                </div>
                            </div>
                        </div>
                    }


                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->
        }
        else
        {
            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">

                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row">


                    @foreach (var product in Model.AllSelectedProducts)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="/ProductView?SelectedProduct=@product.ID"><img class="card-img-top" src="@product.URLImg" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/ProductView?SelectedProduct=@product.ID">@product.ProductName</a>
                                    </h4>
                                    <h5>
                                        @if (product.PriceWithDiscount != product.Price)
                                        {
                                            <span><s>@product.Price</s> :-</span>

                                            <span class="text-danger">@Math.Round(product.PriceWithDiscount, 0) :-</span>
                                        }
                                        else
                                        {
                                            <span>@product.Price :-</span>
                                        }
                                    </h5>
                                    <p class="card-text">@product.Description</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@product.Category.TypeName</small>
                                    @* <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>*@
                                </div>
                            </div>
                        </div>
                    }


                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->
        }



    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
